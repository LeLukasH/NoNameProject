//
// delete the darn object.
//
//////////////////////////////////////////////////////////////////////////////

owner                                = GoSkritComponent;

event OnGoHandleMessage$( eWorldEvent e$, WorldMessage msg$ )
{
	if( e$ == WE_REQ_ACTIVATE )		
	{
		Goid object$ = MakeGoid( msg$.GetData1() );
		
		if( object$.IsValid() )
		{
			PostWorldMessage( WE_REQ_DELETE, object$, object$, 0 );
		}
	}
}