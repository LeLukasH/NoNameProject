		{
			[*]
			{
				action* = change_quest_state("quest_trella_rune","active",1);
			  b can_self_destruct = true;
				condition* = receive_world_message("we_picked_up",0,"on_first_message"), doc("[*one-shot check (trigger is one-shot)*]");
