			  b flip_flop = false;
			  b multi_player = true;
			  b no_trig_bits = false;
				occupants_group = ;
			  f reset_duration = 0.000000;
			  b single_player = true;
			  b single_shot = true;
			  b start_active = true;
			}
		}
	}
	[gui]
	{
		can_sell = FALSE;
		inventory_icon = b_gui_ig_i_it_rune_002;
	}
